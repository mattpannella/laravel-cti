{
    "name": "pannella/laravel-cti",
    "description": "A Laravel package for Class Table Inheritance support with automatic subtype casting.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/mattpannella/laravel-cti",
    "keywords": [
        "laravel",
        "cti",
        "class table inheritance",
        "subtype casting"
    ],
    "version": "1.0.5",
    "authors": [
        {
            "name": "Matt Pannella",
            "email": "mattpannella@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/database": ">=8.0 <13.0"
    },
    "autoload": {
        "psr-4": {
            "Pannella\\Cti\\": "src/",
            "Pannella\\Cti\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "illuminate/events": ">=8.0 <13.0",
        "illuminate/container": ">=8.0 <13.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
